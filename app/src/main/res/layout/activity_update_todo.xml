<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UpdateTodoActivity" >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:padding="16dp" android:gravity="center">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Update Todo"
                android:textAlignment="center"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"/>

        <EditText
                android:id="@+id/editTextTodo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="todo?"/>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:inputType="textMultiLine"
                android:gravity="start|top"
                android:ems="10"
                android:id="@+id/editTextDesc" android:hint="description..."/>
        <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/editTextDate" android:editable="false"/>

        <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Add Date"
                android:id="@+id/btn_edit_date"/>

        <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/editTextTime" android:editable="false"/>

        <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Add Time"
                android:id="@+id/btn_edit_time"/>

        <CheckBox
                android:id="@+id/checkBoxFavorite"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Mark as favorite" android:layout_marginTop="5dp" android:gravity="center"/>

        <CheckBox
                android:id="@+id/checkBoxFinished"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Mark as finished" android:gravity="center"/>

        <Button
                android:text="Link Contacts"
                android:layout_width="200dp"
                android:layout_height="40dp" android:id="@+id/contacts" android:shadowColor="#FFFFFF"
                android:backgroundTint="#0091EA" android:textSize="12sp"/>
        <Button
                android:id="@+id/button_update"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimary"
                android:text="Update"
                android:textAllCaps="false"
                android:textColor="@color/colorLight"/>

        <Button
                android:id="@+id/button_delete"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@color/colorRed"
                android:text="Delete"
                android:textAllCaps="false"
                android:textColor="@color/colorLight"/>

    </LinearLayout>

</RelativeLayout>